<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".messdata">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <EditText
        android:id="@+id/dmessname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:hint="Enter Mess Name"
        android:drawableStart="@drawable/edit"
        android:drawableEnd="@drawable/pen"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        />
    <EditText
        android:id="@+id/dmessownername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:drawableStart="@drawable/user"
        android:drawableEnd="@drawable/pen"
        android:hint="the wastage amount in KG"
        android:layout_marginTop="280dp"
        />
    <EditText
        android:id="@+id/dmessphonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Phone Number"
        android:textAlignment="center"
        android:inputType="phone"
        android:drawableStart="@drawable/phone"
        android:drawableEnd="@drawable/pen"
        android:layout_marginTop="330dp"
        />

    <EditText
        android:id="@+id/dmesslocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Location"
        android:drawableEnd="@drawable/pen"
        android:drawableStart="@drawable/pin"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:layout_marginTop="380dp"
        />

    <Button
        android:id="@+id/duserrequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:textAlignment="center"
        android:text="Donate Now"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        />




</androidx.coordinatorlayout.widget.CoordinatorLayout>